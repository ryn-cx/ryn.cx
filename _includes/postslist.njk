<div class="grid grid-cols-3 gap-4">
	{%- for post in postslist | reverse %}
		<a href="{{ post.url }}" class="relative overflow-hidden block group">
			<img class="w-full h-full object-cover transition-transform group-hover:scale-110" src="{{ post.data.absolute_image_url or (post.url + (post.data.relative_image_url | replace('./', ''))) }}" alt="{{ post.data.title }}"/>
			<div class="absolute bottom-0 left-0 right-0 text-white p-2 z-10 opacity-90" style="background-color: rgba(0, 0, 0, 0.75);">
				<h3 class="text-sm font-semibold">{{ post.data.title }}</h3>
				<p class="text-xs opacity-90">{{ post.date | readableDate("DD") }}</p>
			</div>
		</a>
	{%- endfor %}
</div>
